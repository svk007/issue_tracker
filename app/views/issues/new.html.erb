<h2>Add Issue</h2>
<%= form_for(:issues, :url => {:action => 'create'}) do |f| %>
<table>
	<tr>
		<td> Heading </td>
		<td> <%= f.text_field :heading %> </td>
	</tr>
	<tr>
		<td> Description </td>
		<td> <%= f.text_area :description %> </td>
	</tr>
</table>
<%= submit_tag("Create Issue") %>
<% end %>